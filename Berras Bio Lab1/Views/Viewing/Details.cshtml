@model Berras_Bio_Lab1.Models.ViewingModel

@{
    ViewData["Title"] = "Details";
}

    <h1>@Html.DisplayFor(model => model.Movie.Name)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Start time:
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString("dddd, dd MMMM HH:mm")
        </dd>
        <dt class="col-sm-2">
            Avaible seats:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvaibleSeats) of @Html.DisplayFor(model => model.TotalSeats)
        </dd>
        <dt class="col-sm-2">
            Theater:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theater.Name)
        </dd>
        <dt class="col-sm-2">
            Category:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Category)
        </dd>
        <dt class="col-sm-2">
            Runtime:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.RunTime) minutes
        </dd>
    </dl>
</div>
<div>
    <a class="text-black-50 btn btn-outline-danger" asp-action="Index">Back to List</a>
</div>
